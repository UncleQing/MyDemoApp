<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayerActivity">


    <Button
        android:id="@+id/btn_layer_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Show ET"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_layer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Show AC"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@id/btn_layer_et"
        app:layout_constraintTop_toTopOf="@id/btn_layer_et" />

    <ViewStub
        android:id="@+id/vs_et_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@id/btn_layer_et"
        app:layout_constraintTop_toBottomOf="@id/btn_layer_et"
        android:layout="@layout/layout_edit_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>